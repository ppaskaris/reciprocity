@model reciprocity.Models.Recipe.EditIngredientViewModel

@{
    var units = (IEnumerable<SelectListItem>)ViewData["Units"];
    bool showBulkActions = (bool)ViewData["ShowBulkActions"];
}
<tr>
    @if (showBulkActions)
    {
        <td>
            <label asp-for="Checked" class="sr-only"></label>
            <input asp-for="Checked" class="form-control" />
            <span asp-validation-for="Checked" class="text-danger"></span>
        </td>
    }
    <td>
        <input asp-for="IngredientNo" type="hidden" />
        <label asp-for="Name" class="sr-only"></label>
        @{ string className = Model.AutoFocus ? "js-AutoFocus" : ""; }
        @{ string listId = Html.IdFor(model => model.Name) + "_Options"; }
        <input asp-for="Name"
               class="form-control @className js-AutoSuggest" list="@listId"
               autocomplete="off" data-href="@Url.Action("AutoSuggest", "Home")"
               data-quantity-unit="@Html.IdFor(model => model.QuantityUnit)"
               data-calories-per-serving="@Html.IdFor(model => model.CaloriesPerServing)"
               data-serving="@Html.IdFor(model => model.Serving)"
               data-serving-unit="@Html.IdFor(model => model.ServingUnit)" />
        <datalist id="@listId"></datalist>
        <span asp-validation-for="Name" class="text-danger"></span>
    </td>
    <td>
        <label asp-for="Quantity" class="sr-only"></label>
        <input asp-for="Quantity" class="form-control" style="text-align:right;" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </td>
    <td>
        <label asp-for="QuantityUnit" class="sr-only"></label>
        <select asp-for="QuantityUnit" asp-items="units" class="form-control"></select>
        <span asp-validation-for="QuantityUnit" class="text-danger"></span>
    </td>
    <td>
        <label asp-for="CaloriesPerServing" class="sr-only"></label>
        <input asp-for="CaloriesPerServing" class="form-control" style="text-align:center;" />
        <span asp-validation-for="CaloriesPerServing" class="text-danger"></span>
    </td>
    <td>
        <label asp-for="Serving" class="sr-only"></label>
        <input asp-for="Serving" class="form-control" style="text-align:right;" />
        <span asp-validation-for="Serving" class="text-danger"></span>
    </td>
    <td>
        <label asp-for="ServingUnit" class="sr-only"></label>
        <select asp-for="ServingUnit" asp-items="units" class="form-control"></select>
        <span asp-validation-for="ServingUnit" class="text-danger"></span>
    </td>
</tr>
@model reciprocity.Models.Home.CreateBookModel

@{
    ViewData["Title"] = "Create Recipe Book";
}

<h1>@ViewData["Title"]</h1>
<p><strong>Recipe books</strong> are anonymous collections of recipes.</p>

<form asp-action="CreateBook">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" placeholder="My Recipes"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create Recipe Book" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
